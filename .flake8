[flake8]
max-line-length = 100
max-complexity = 10
extend-ignore = E203,E501,W503,F401
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    .pytest_cache,
    .mypy_cache,
    .tox,
    dist,
    build,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
count = True
statistics = True
