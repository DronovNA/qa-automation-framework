[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    .pytest_cache,
    .mypy_cache,
    dist,
    build,
    *.egg-info
ignore =
    E203,  # Whitespace before ':'
    E501,  # Line too long (handled by Black)
    W503,  # Line break before binary operator
    F401   # Unused imports (handled by isort)
